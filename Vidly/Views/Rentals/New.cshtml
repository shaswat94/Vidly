<h2>New Rental Form</h2>

<form id="newRental">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="customers" name="customer" type="text" value="" data-rule-validCustomer="true" required class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input id="txtmovies" name="movie" data-rule-atLeastOneMovie="true" type="text" value="" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="movies" class="list-group"></ul>
        </div>
    </div>
    <button class="btn btn-primary" id="submitForm">Submit</button>
</form>
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/Vidly/newRentalScript.js")
